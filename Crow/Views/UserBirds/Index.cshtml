@model IEnumerable<Crow.Models.UserBird>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-5">My Birds</h1>

@using (Html.BeginForm())
{
    <div class="d-flex justify-content-center mt-4">
        <div class="col-12 col-md-6">
            <div class="input-group search-bar-custom">
                @Html.TextBox("SearchString", null, new { @class = "form-control" })
                <button type="submit" class="btn crow-icon-btn search-bar-btn">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </div>
    </div>
}

<div class="card border-0 mt-4">
    <div class="card-body">
        <div class="row text-center fw-bold">
            <div class="col-md-4">
                @Html.ActionLink("Common Name", "Index", new { sortOrder = ViewBag.CommonSortParam })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Scientific Name", "Index", new { sortOrder = ViewBag.ScientificSortParam })
            </div>
            <div class="col-md-4">
                Actions
            </div>
        </div>
    </div>
 </div>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-center text-center">
                <div class="col-4">@Html.DisplayFor(modelItem => item.Bird.CommonName)</div>
                <div class="col-4 fst-italic align-middle">@Html.DisplayFor(modelItem => item.Bird.ScientificName)</div>
                <div class="col-4">
                    <div class="btn-group" role="group">
                        <a class="btn crow-icon-btn" asp-controller="Photos" asp-action="Index" asp-route-id="@item.Id">
                            <i class="fa-regular fa-images"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">No birds yet.</p>
    }
</div>

