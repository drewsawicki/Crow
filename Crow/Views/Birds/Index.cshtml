@model Crow.ViewModels.BirdIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Birds</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <div class="d-flex justify-content-center">
        <div class="col-12 col-md-6">
            <div class="input-group search-bar-custom">
                @Html.TextBox("SearchString", null, new { @class = "form-control" })
                <button type="submit" class="btn crow-icon-btn search-bar-btn">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </div>
    </div>
}
<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Common Name", "Index", new { sortOrder = ViewBag.CommonSortParam })
            </th>
            <th>
                @Html.ActionLink("Scientific Name", "Index", new { sortOrder = ViewBag.ScientificSortParam })
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Birds) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommonName)
            </td>
            <td class="fst-italic">
                @Html.DisplayFor(modelItem => item.ScientificName)
            </td>
            <td>
                    @if (Model.UserBirdIds.Contains(item.Id))
                    {
                        <i class="fa-solid fa-binoculars crow-primary"></i>
                    }
                </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
